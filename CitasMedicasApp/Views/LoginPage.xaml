<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CitasMedicasApp.Views.LoginPage"
             Title="Iniciar Sesión"
             BackgroundColor="#f8f9fa">

    <ScrollView>
        <StackLayout Padding="30" VerticalOptions="CenterAndExpand">

            <!-- Logo o título -->
            <Label Text="CITAS MÉDICAS" 
                   FontSize="28" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#2c3e50"
                   Margin="0,0,0,40"/>

            <!-- Email -->
            <Frame BackgroundColor="White" 
                   HasShadow="True" 
                   CornerRadius="10"
                   Margin="0,10">
                <StackLayout>
                    <Label Text="Email:" FontAttributes="Bold" TextColor="#34495e"/>
                    <Entry x:Name="EmailEntry" 
                           Placeholder="Ingrese su email"
                           Keyboard="Email"
                           BackgroundColor="Transparent"/>
                </StackLayout>
            </Frame>

            <!-- Password -->
            <Frame BackgroundColor="White" 
                   HasShadow="True" 
                   CornerRadius="10"
                   Margin="0,10">
                <StackLayout>
                    <Label Text="Contraseña:" FontAttributes="Bold" TextColor="#34495e"/>
                    <Entry x:Name="PasswordEntry" 
                           Placeholder="Ingrese su contraseña"
                           IsPassword="True"
                           BackgroundColor="Transparent"/>
                </StackLayout>
            </Frame>

            <!-- Mensaje de error -->
            <Label x:Name="ErrorLabel" 
                   Text="" 
                   TextColor="Red" 
                   IsVisible="False"
                   HorizontalOptions="Center"
                   Margin="0,10"/>

            <!-- Botón de login -->
            <Button x:Name="LoginButton" 
                    Text="INICIAR SESIÓN" 
                    BackgroundColor="#3498db"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    FontAttributes="Bold"
                    Margin="0,20"
                    Clicked="OnLoginClicked"/>

            <!-- Indicador de carga -->
            <ActivityIndicator x:Name="LoadingIndicator" 
                             IsVisible="False"
                             IsRunning="False"
                             Color="#3498db"/>

        </StackLayout>
    </ScrollView>
</ContentPage>