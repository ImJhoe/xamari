<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CitasMedicasApp.Views.RegistroMedicoPage"
             Title="Registro de Médico">

    <ScrollView BackgroundColor="#f8f9fa">
        <StackLayout Padding="20" Spacing="15">

            <!-- Título -->
            <Label Text="REGISTRO DE MÉDICO" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#2c3e50"
                   Margin="0,10,0,20"/>

            <!-- SECCIÓN 1: Datos Personales -->
            <Frame BackgroundColor="White" HasShadow="True" CornerRadius="10">
                <StackLayout Spacing="15">
                    <Label Text="👨‍⚕️ DATOS PERSONALES" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           TextColor="#34495e"/>

                    <!-- Cédula -->
                    <StackLayout>
                        <Label Text="Cédula:" FontAttributes="Bold" TextColor="#555"/>
                        <Entry x:Name="CedulaEntry" 
                               Placeholder="1234567890"
                               Keyboard="Numeric"
                               MaxLength="10"/>
                    </StackLayout>

                    <!-- Nombre -->
                    <StackLayout>
                        <Label Text="Nombre:" FontAttributes="Bold" TextColor="#555"/>
                        <Entry x:Name="NombreEntry" 
                               Placeholder="Ingrese nombre completo"/>
                    </StackLayout>

                    <!-- Apellido -->
                    <StackLayout>
                        <Label Text="Apellido:" FontAttributes="Bold" TextColor="#555"/>
                        <Entry x:Name="ApellidoEntry" 
                               Placeholder="Ingrese apellidos"/>
                    </StackLayout>

                    <!-- Email -->
                    <StackLayout>
                        <Label Text="Email:" FontAttributes="Bold" TextColor="#555"/>
                        <Entry x:Name="EmailEntry" 
                               Placeholder="doctor@email.com"
                               Keyboard="Email"/>
                    </StackLayout>

                    <!-- Teléfono -->
                    <StackLayout>
                        <Label Text="Teléfono:" FontAttributes="Bold" TextColor="#555"/>
                        <Entry x:Name="TelefonoEntry" 
                               Placeholder="0998765432"
                               Keyboard="Telephone"/>
                    </StackLayout>

                    <!-- Contraseña -->
                    <StackLayout>
                        <Label Text="Contraseña:" FontAttributes="Bold" TextColor="#555"/>
                        <Entry x:Name="PasswordEntry" 
                               Placeholder="Mínimo 6 caracteres"
                               IsPassword="True"/>
                    </StackLayout>
                </StackLayout>
            </Frame>

            <!-- SECCIÓN 2: Datos Profesionales -->
            <Frame BackgroundColor="White" HasShadow="True" CornerRadius="10">
                <StackLayout Spacing="15">
                    <Label Text="🩺 DATOS PROFESIONALES" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           TextColor="#34495e"/>

                    <!-- Especialidad -->
                    <StackLayout>
                        <Label Text="Especialidad:" FontAttributes="Bold" TextColor="#555"/>
                        <Picker x:Name="EspecialidadPicker" 
                                Title="Seleccione especialidad"/>
                    </StackLayout>

                    <!-- Título Profesional -->
                    <StackLayout>
                        <Label Text="Título Profesional:" FontAttributes="Bold" TextColor="#555"/>
                        <Entry x:Name="TituloProfesionalEntry" 
                               Placeholder="Ej: MSc. Cardiólogo"/>
                    </StackLayout>
                </StackLayout>
            </Frame>

            <!-- SECCIÓN 3: Asignación de Horarios NUEVA -->
            <Frame BackgroundColor="White" HasShadow="True" CornerRadius="10">
                <StackLayout Spacing="15">
                    <Label Text="🕒 ASIGNACIÓN DE HORARIOS" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           TextColor="#34495e"/>

                    <!-- Botón para agregar horario -->
                    <Button x:Name="AgregarHorarioButton"
                            Text="➕ AGREGAR NUEVO HORARIO"
                            BackgroundColor="#27ae60"
                            TextColor="White"
                            CornerRadius="25"
                            FontSize="14"
                            FontAttributes="Bold"
                            Clicked="OnAgregarHorarioClicked"/>

                    <!-- Lista de horarios agregados -->
                    <StackLayout x:Name="HorariosListaStack" Spacing="10">
                        <!-- Los horarios se agregarán aquí dinámicamente -->
                    </StackLayout>

                    <!-- Contador de horarios -->
                    <Label x:Name="ContadorHorariosLabel"
                           Text="0 horarios agregados"
                           FontSize="12"
                           TextColor="#7f8c8d"
                           HorizontalOptions="Center"/>
                </StackLayout>
            </Frame>

            <!-- Mensajes de estado -->
            <Frame x:Name="MessageFrame" IsVisible="False" HasShadow="True" CornerRadius="8">
                <Label x:Name="MessageLabel" FontSize="14" HorizontalOptions="Center"/>
            </Frame>

            <!-- Indicador de carga -->
            <ActivityIndicator x:Name="LoadingIndicator" IsVisible="False" IsRunning="False" Color="#3498db"/>

            <!-- Botones de acción -->
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="20" Margin="0,20,0,0">
                <Button x:Name="RegistrarButton" 
                        Text="💾 REGISTRAR MÉDICO"
                        BackgroundColor="#3498db"
                        TextColor="White"
                        CornerRadius="25"
                        Padding="30,12"
                        FontSize="16"
                        FontAttributes="Bold"
                        Clicked="OnRegistrarMedicoClicked"/>

                <Button x:Name="LimpiarButton" 
                        Text="🗑️ LIMPIAR"
                        BackgroundColor="#e74c3c"
                        TextColor="White"
                        CornerRadius="25"
                        Padding="30,12"
                        FontSize="16"
                        FontAttributes="Bold"
                        Clicked="OnLimpiarClicked"/>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>