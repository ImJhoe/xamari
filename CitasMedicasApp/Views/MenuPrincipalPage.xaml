<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CitasMedicasApp.Views.MenuPrincipalPage"
             Title="Citas Médicas - Menú Principal"
             BackgroundColor="#f8f9fa">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Frame BackgroundColor="White" HasShadow="True" CornerRadius="15" Padding="20">
                <StackLayout>
                    <Label Text="🏥 SISTEMA DE CITAS MÉDICAS" 
                           FontSize="24" 
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="#2c3e50"/>

                    <Label x:Name="WelcomeLabel" 
                           Text="Bienvenido al sistema" 
                           FontSize="16"
                           TextColor="#7f8c8d"
                           HorizontalOptions="Center"
                           Margin="0,10,0,0"/>
                </StackLayout>
            </Frame>

            <!-- Gestión de Médicos -->
            <Label Text="👨‍⚕️ GESTIÓN DE MÉDICOS" 
                   FontSize="18" 
                   FontAttributes="Bold" 
                   TextColor="#2c3e50"
                   Margin="0,10,0,0"/>

            <Grid RowDefinitions="*, *" ColumnDefinitions="*, *" RowSpacing="15" ColumnSpacing="15">

                <!-- Registro Médico -->
                <Frame Grid.Row="0" Grid.Column="0" 
                       BackgroundColor="#3498db" 
                       HasShadow="True" 
                       CornerRadius="15"
                       Padding="0">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnRegistroMedicoTapped"/>
                    </Frame.GestureRecognizers>
                    <StackLayout HorizontalOptions="Center" 
                                 VerticalOptions="Center" 
                                 Padding="20">
                        <Label Text="➕" FontSize="30" HorizontalOptions="Center" TextColor="White"/>
                        <Label Text="Registrar" 
                               TextColor="White" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               FontSize="14"/>
                        <Label Text="Médico" 
                               TextColor="White" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               FontSize="14"/>
                    </StackLayout>
                </Frame>

                <!-- Consultar Médicos -->
                <Frame Grid.Row="0" Grid.Column="1" 
                       BackgroundColor="#2ecc71" 
                       HasShadow="True" 
                       CornerRadius="15"
                       Padding="0">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnConsultarMedicoTapped"/>
                    </Frame.GestureRecognizers>
                    <StackLayout HorizontalOptions="Center" 
                                 VerticalOptions="Center" 
                                 Padding="20">
                        <Label Text="👨‍⚕️" FontSize="30" HorizontalOptions="Center"/>
                        <Label Text="Consultar" 
                               TextColor="White" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               FontSize="14"/>
                        <Label Text="Médicos" 
                               TextColor="White" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               FontSize="14"/>
                    </StackLayout>
                </Frame>

            </Grid>

            <!-- Gestión de Citas -->
            <Label Text="📋 GESTIÓN DE CITAS" 
                   FontSize="18" 
                   FontAttributes="Bold" 
                   TextColor="#2c3e50"
                   Margin="0,20,0,0"/>

            <Grid RowDefinitions="*, *" ColumnDefinitions="*, *" RowSpacing="15" ColumnSpacing="15">

                <!-- Crear Cita -->
                <Frame Grid.Row="0" Grid.Column="0" 
                       BackgroundColor="#e74c3c" 
                       HasShadow="True" 
                       CornerRadius="15"
                       Padding="0">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCrearCitaTapped"/>
                    </Frame.GestureRecognizers>
                    <StackLayout HorizontalOptions="Center" 
                                 VerticalOptions="Center" 
                                 Padding="20">
                        <Label Text="📅" FontSize="30" HorizontalOptions="Center"/>
                        <Label Text="Crear" 
                               TextColor="White" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               FontSize="14"/>
                        <Label Text="Cita" 
                               TextColor="White" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               FontSize="14"/>
                    </StackLayout>
                </Frame>

                <!-- Ver Citas -->
                <Frame Grid.Row="0" Grid.Column="1" 
                       BackgroundColor="#9b59b6" 
                       HasShadow="True" 
                       CornerRadius="15"
                       Padding="0">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnVerCitasTapped"/>
                    </Frame.GestureRecognizers>
                    <StackLayout HorizontalOptions="Center" 
                                 VerticalOptions="Center" 
                                 Padding="20">
                        <Label Text="📊" FontSize="30" HorizontalOptions="Center"/>
                        <Label Text="Ver" 
                               TextColor="White" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               FontSize="14"/>
                        <Label Text="Citas" 
                               TextColor="White" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               FontSize="14"/>
                    </StackLayout>
                </Frame>

                <!-- Registrar Paciente -->
                <Frame Grid.Row="1" Grid.Column="0" 
                       BackgroundColor="#f39c12" 
                       HasShadow="True" 
                       CornerRadius="15"
                       Padding="0">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnRegistroPacienteTapped"/>
                    </Frame.GestureRecognizers>
                    <StackLayout HorizontalOptions="Center" 
                                 VerticalOptions="Center" 
                                 Padding="20">
                        <Label Text="👤" FontSize="30" HorizontalOptions="Center"/>
                        <Label Text="Registrar" 
                               TextColor="White" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               FontSize="14"/>
                        <Label Text="Paciente" 
                               TextColor="White" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               FontSize="14"/>
                    </StackLayout>
                </Frame>

                <!-- Configuración -->
                <Frame Grid.Row="1" Grid.Column="1" 
                       BackgroundColor="#34495e" 
                       HasShadow="True" 
                       CornerRadius="15"
                       Padding="0">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnConfiguracionTapped"/>
                    </Frame.GestureRecognizers>
                    <StackLayout HorizontalOptions="Center" 
                                 VerticalOptions="Center" 
                                 Padding="20">
                        <Label Text="⚙️" FontSize="30" HorizontalOptions="Center"/>
                        <Label Text="Configuración" 
                               TextColor="White" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               FontSize="14"/>
                    </StackLayout>
                </Frame>

            </Grid>

            <!-- Botón Cerrar Sesión -->
            <Button x:Name="CerrarSesionButton" 
                    Text="🚪 CERRAR SESIÓN" 
                    BackgroundColor="#95a5a6"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    FontAttributes="Bold"
                    Margin="0,30,0,10"
                    Clicked="OnCerrarSesionClicked"/>

        </StackLayout>
    </ScrollView>
</ContentPage>